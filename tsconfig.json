{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowUnreachableCode": false,
    "target": "es5",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "mocha",
      "chai-enzyme",
      "sinon-chai",
      "chai-as-promised"
    ]
  },
  "exclude": [
    "node_modules",
    "docs-site",
    "lib",
    "cli",
    "examples",
    "index.js",
    "*.d.ts"
  ]
}
